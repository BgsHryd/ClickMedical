<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary">

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:textSize="36dp"
        android:text="REGISTRATION"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Lengkap"
        android:textColor="@color/black"
        android:layout_margin="40dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        ></TextView>

    <EditText
        android:id="@+id/inputName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:background="#75ffffff"
        android:backgroundTint="@color/secondary"
        android:hint="Input name here"
        android:maxLines="1"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nama" />
    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/black"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/inputName"
        ></TextView>
    <EditText
        android:id="@+id/inputEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="1"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:backgroundTint="@color/secondary"
        android:background="#75ffffff"
        android:drawablePadding="10dp"
        android:hint="Input email here"
        />
    <TextView
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/black"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/inputEmail"
        ></TextView>
    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="1"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:backgroundTint="@color/secondary"
        android:background="#75ffffff"
        android:drawablePadding="10dp"
        android:hint="Input password here"
        android:inputType="textPassword"
        />
    <TextView
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:textColor="@color/black"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/inputPassword"
        ></TextView>
    <EditText
        android:id="@+id/inputConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/confirm"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="1"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:backgroundTint="@color/secondary"
        android:background="#75ffffff"
        android:drawablePadding="10dp"
        android:hint="Retype your password"
        android:inputType="textPassword"
        />
    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/inputConfirm"
        android:backgroundTint="@color/secondary_variant"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="40dp"
        android:text="REGISTER"
        ></Button>
    <Button
        android:id="@+id/LoginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/registerButton"
        android:backgroundTint="@color/secondary_variant"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="40dp"
        android:text="Sign In"
        ></Button>
</androidx.constraintlayout.widget.ConstraintLayout>