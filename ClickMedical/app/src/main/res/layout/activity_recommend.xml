<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecommendActivity"
    android:background="@color/primary">

    <TextView
        android:id="@+id/titleRekomendasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rekomendasi Rumah Sakit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_marginTop="25dp"
        ></TextView>
    <ImageView
        android:id="@+id/imageRS"
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/titleRekomendasi"
        ></ImageView>
    <GridLayout
        android:id="@+id/gridRec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageRS"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="30dp"
        android:background="@color/secondary"
        android:rowCount="4"
        android:columnCount="2"
        android:paddingVertical="20dp">

        <TextView
            android:id="@+id/namaRSTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="Rumah Sakit PlaceHolder Bandung"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_columnSpan="2"
            android:layout_row="0"
            android:textColor="@color/black"
            android:layout_marginBottom="25dp"
            ></TextView>

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Alamat"
            android:textColor="@color/black"
            android:textSize="20dp"
            ></TextView>
        <TextView
            android:id="@+id/RecRSAlamat"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_row="1"
            android:layout_column="1"
            android:text=": ALAMAT PLACEHOLDER"
            android:textColor="@color/black"
            android:textSize="20dp"
            ></TextView>
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginVertical="10dp"
            android:text="No. Telp"
            android:textColor="@color/black"
            android:textSize="20dp"
            ></TextView>
        <TextView
            android:id="@+id/RecRSPhone"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_row="2"
            android:layout_column="1"
            android:text=": PHONE PLACEHOLDER"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginVertical="10dp"
            ></TextView>

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginVertical="10dp"
            android:text="Website"
            android:textColor="@color/black"
            android:textSize="20dp"
            ></TextView>
        <TextView
            android:id="@+id/RecRSWebsite"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_row="3"
            android:layout_column="1"
            android:text=": WEBSITE PLACEHOLDER"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginVertical="10dp"
            ></TextView>
    </GridLayout>

    <Button
        android:id="@+id/recPesanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesan Kamar"
        app:layout_constraintTop_toBottomOf="@id/gridRec"
        android:backgroundTint="@color/secondary_variant"
        android:layout_margin="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        ></Button>


</androidx.constraintlayout.widget.ConstraintLayout>